<!DOCTYPE html>
<html>
<head>
  <title>PDF Notes List</title>
  <style>
    body { font-family: sans-serif; background: #f7f7f7; padding: 20px; }
    .note-card {
      background: #fff;
      padding: 16px;
      border-radius: 8px;
      margin-bottom: 16px;
      box-shadow: 0 0 8px rgba(0,0,0,0.1);
    }
    .note-card h2 {
      margin-top: 0;
    }
    .note-card .meta {
      font-size: 0.9em;
      color: #666;
    }
    .note-card a {
      display: inline-block;
      margin-top: 8px;
      color: #007bff;
      text-decoration: none;
    }
    .note-card a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <h1>PDF Notes</h1>

  <% if (notes.length === 0) { %>
    <p>No notes found.</p>
  <% } else { %>
    <% notes.forEach(note => { %>
      <div class="note-card">
        <h2><%= note.title %></h2>
        <p class="meta">Course: <%= note.courseName %> | Instructor: <%= note.instructor %></p>
        <p><%= note.description %></p>
        <a href="/notes/preview/notes/<%= note._id %>" target="_blank">Preview PDF</a> |
        <a href="/api/notes/download/<%= note._id %>">Download PDF</a>
      </div>
    <% }); %>
  <% } %>
</body>
</html>
